<!-- data & personalization blurb -->
<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-12 col-xl-10">
                <h2 class="section__title">Personalization in practice</h2>
                <p class="section__text section__text--small">
                    Personalization on FlixTV is simple: we only use your <b>viewing activity</b>
                    (e.g., what you watched, progress, dates and last position) together with your
                    explicit interactions (favourites, likes/dislikes, reviews) to refine the titles
                    we highlight for you. The more you use the platform, the better the fits become.
                    You can still watch without signing in — just without personalization.
                </p>
                <p class="section__text section__text--small">
                    For details about how we handle data, see our
                    <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>.
                </p>
                <p class="section__text section__text--small">
                    <a href="#top" class="js-backtotop">Back to top ↑</a>
                </p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        (function () {
          // Header height → CSS var for scroll-margin
          function headerOffset() {
            const h = document.querySelector('header.header');
            return (h?.offsetHeight || 0) + 16; // extra breathing room
          }
          function applyOffsetVar() {
            document.documentElement.style.setProperty('--anchor-offset', headerOffset() + 'px');
          }
          applyOffsetVar();
          window.addEventListener('resize', applyOffsetVar);

          // Smooth scroll that respects header height
          function smoothGoTo(hash) {
            const el = document.querySelector(hash);
            if (!el) return;
            const y = Math.max(0, el.getBoundingClientRect().top + window.pageYOffset - headerOffset());
            window.scrollTo({ top: y, behavior: 'smooth' });
            history.replaceState(null, '', hash);
          }

          // Hook up all “back to top” links
          document.querySelectorAll('a.js-backtotop, a[href="#top"]').forEach(a => {
            a.addEventListener('click', (e) => {
              e.preventDefault();
              smoothGoTo('#top');
            });
          });

          // If page opened with a hash, align it under the header
          if (location.hash) {
            const target = document.querySelector(location.hash);
            if (target) {
              const y = Math.max(0, target.getBoundingClientRect().top + window.pageYOffset - headerOffset());
              window.scrollTo({ top: y, behavior: 'auto' });
            }
          }
        })();
    </script>

    <style>
        /* Ensure anchors never hide behind the fixed header */
        #top {
            scroll-margin-top: var(--anchor-offset, 96px);
        }

        :target {
            scroll-margin-top: var(--anchor-offset, 96px);
        }
    </style>
}
