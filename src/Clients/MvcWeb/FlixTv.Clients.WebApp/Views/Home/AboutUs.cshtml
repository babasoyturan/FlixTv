@{
    ViewData["Title"] = "About FlixTV";
}
<!-- head -->
<section class="section section--head section--head-fixed" id="top">
    <div class="container">
        <div class="row">
            <div class="col-12 col-xl-6">
                <h1 class="section__title section__title--head">About FlixTV</h1>
            </div>

            <div class="col-12 col-xl-6">
                <ul class="breadcrumb">
                    <li class="breadcrumb__item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb__item breadcrumb__item--active">About</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- end head -->
<!-- about intro -->
<section class="section section--pb0">
    <div class="container">
        <div class="row">
            <!-- section text -->
            <div class="col-12">
                <p class="section__text section__text--small">
                    FlixTV is a <b>free movie platform</b>. You can watch titles without creating an account.
                    If you choose to sign in, the experience becomes <b>personalized</b>: we learn what you enjoy
                    from your viewing activity and surface better suggestions on the homepage over time.
                </p>
                <p class="section__text section__text--small">
                    Logged-in members can write comments &amp; reviews, like/dislike others’ comments, build their
                    own <b>Favourites</b>, and continue from where they left off. Anonymous visitors can still watch
                    movies and read public feedback — just without personalization.
                </p>
            </div>
            <!-- end section text -->
        </div>

        <!-- how it works (steps) -->
        <div class="row row--grid">
            <div class="col-12 col-lg-4">
                <div class="step">
                    <span class="step__number">01</span>
                    <h3 class="step__title">Browse &amp; watch — free</h3>
                    <p class="step__text">Enjoy the catalog instantly. No payments, no subscriptions, no hidden fees.</p>
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="step">
                    <span class="step__number">02</span>
                    <h3 class="step__title">Create an account (optional)</h3>
                    <p class="step__text">Sign in to comment, review, like/dislike and build your own favourites list.</p>
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="step">
                    <span class="step__number">03</span>
                    <h3 class="step__title">Get personalized</h3>
                    <p class="step__text">Your home feed adapts to your taste based on what you watch and interact with.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end about intro -->
