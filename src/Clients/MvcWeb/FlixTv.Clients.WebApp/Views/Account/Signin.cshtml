@model LoginCommandRequest

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- CSS -->
	<link rel="stylesheet" href="~/css/bootstrap-reboot.min.css">
	<link rel="stylesheet" href="~/css/bootstrap-grid.min.css">
	<link rel="stylesheet" href="~/css/owl.carousel.min.css">
	<link rel="stylesheet" href="~/css/slider-radio.css">
	<link rel="stylesheet" href="~/css/select2.min.css">
	<link rel="stylesheet" href="~/css/magnific-popup.css">
	<link rel="stylesheet" href="~/css/plyr.css">
	<link rel="stylesheet" href="~/css/main.css">

	<!-- Favicons -->
	<link rel="icon" type="image/png" href="~/icon/favicon-32x32.png" sizes="32x32">
	<link rel="apple-touch-icon" href="~/icon/favicon-32x32.png">
	<title>FlixTV – Sign in</title>

</head>
<body>
	<!-- sign in -->
	<div class="sign section--full-bg" data-bg="../img/bg.jpg">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="sign__content">
						<!-- authorization form -->
						<form class="sign__form" asp-controller="Account" asp-action="Signin" method="post">
							<a class="sign__logo" asp-controller="Home" asp-action="Index">
								<img src="~/img/logo.svg" alt="">
							</a>

							<input value="@ViewBag.ReturnUrl" name="returnUrl" type="hidden">

							<div class="sign__group">
								<input type="text" class="sign__input" placeholder="Email" asp-for="Email">
							</div>

							<div class="sign__group">
								<input type="password" class="sign__input" placeholder="Password" asp-for="Password">
							</div>

							<button class="sign__btn" type="submit">Sign in</button>

							<div class="sign__text" style="color: red;" asp-validation-summary="All"></div>

							<span class="sign__text">Don't have an account? <a asp-controller="Account" asp-action="Signup" >Sign up!</a></span>
							
							<span class="sign__text"><a asp-controller="Account" asp-action="ForgotPassword">Forgot password?</a></span>
						</form>
						<!-- end authorization form -->
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end sign in -->
	<!-- JS -->
	<script src="~/js/jquery-3.5.1.min.js"></script>
	<script src="~/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/owl.carousel.min.js"></script>
	<script src="~/js/slider-radio.js"></script>
	<script src="~/js/select2.min.js"></script>
	<script src="~/js/smooth-scrollbar.js"></script>
	<script src="~/js/jquery.magnific-popup.min.js"></script>
	<script src="~/js/plyr.min.js"></script>
	<script src="~/js/main.js"></script>
</body>
</html>
